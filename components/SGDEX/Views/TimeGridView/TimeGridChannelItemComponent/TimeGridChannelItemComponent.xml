<component name="TimeGridChannelItemComponent" extends="Group">
    <interface>
      <field id="content" type="node" onChange="Imprime" />
      <field id="width" type="float" />
      <field id="height" type="float" />
      <field id="rowFocusPercent" type="float" onChange="showfocus" />
    </interface>

    <script type="text/brightscript" uri="TimeGridChannelItemComponent.brs" />
    <script type="text/brightscript" uri="../../utils/utils.brs" />

    <children>
        <Label
            id="title"
            vertAlign="center"
            horizAlign="left"
            opacity="1.0"
            font="font:SmallSystemFont"
            />
        <Poster
            id="poster"
            loadDisplayMode="scaleToFit"
        />
    </children>
</component>
